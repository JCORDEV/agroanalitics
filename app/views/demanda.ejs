<div class="container mt-4">
    <!-- Formulario para registrar demanda -->
    <form action="/demanda" method="POST">
        <div class="mb-3">
            <label for="nombreCultivo" class="form-label">Nombre del cultivo</label>
            <input type="text" class="form-control" id="nombreCultivo" name="nombreCultivo" placeholder="Ejemplo: Tomates" required>
        </div>
        <div class="mb-3">
            <label for="cantidadRequerida" class="form-label">Cantidad requerida (kg)</label>
            <input type="number" class="form-control" id="cantidadRequerida" name="cantidadRequerida" placeholder="Ejemplo: 200" required>
        </div>
        <div class="mb-3">
            <label for="fechaEntrega" class="form-label">Fecha de entrega</label>
            <input type="date" class="form-control" id="fechaEntrega" name="fechaEntrega" required>
        </div>
        <button type="submit" class="btn btn-success">Registrar demanda</button>
    </form>

