    <ul>
        <% cultivo.forEach(function(project) { %>
            <li>
                <strong>Parcela:</strong> <%= project.parcela %> <br>
                <strong>Tipo:</strong> <%= project.tipo %> <br>
                <strong>Cantidad:</strong> <%= project.cantidad %> <br>
                <strong>Fecha de cosecha:</strong> <%= project.fecha_cosecha ? 'Sí' : 'No' %>
            </li>
        <% }); %>
    </ul>
    <form action="/cultivos" method="POST">
        <div class="mb-3">
            <label for="nombreParcela" class="form-label">Nombre de la parcela</label>
            <input type="text" class="form-control" id="nombreParcela" name="nombreParcela"
                placeholder="Ejemplo: Parcela A" required>
        </div>
        <div class="mb-3">
            <label for="tipoCultivo" class="form-label">Tipo de cultivo</label>
            <input type="text" class="form-control" id="tipoCultivo" name="tipoCultivo"
                placeholder="Ejemplo: Maíz, Frijol" required>
        </div>
        <div class="mb-3">
            <label for="cantidad" class="form-label">Cantidad (kg)</label>
            <input type="number" class="form-control" id="cantidad" name="cantidad" placeholder="Ejemplo: 150" required>
        </div>
        <div class="mb-3">
            <label for="fechaCosecha" class="form-label">Fecha de cosechada</label>
            <input type="date" class="form-control" id="cantidad" name="cantidad" placeholder="Ejemplo: 150" required>
        </div>
        <button type="submit" class="btn btn-success">Registrar cultivo</button>
    </form>
